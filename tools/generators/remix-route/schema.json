{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "remix-route",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "App name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "route": {
      "type": "string",
      "description": "Route name",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }    
  },
  "required": ["name", "route"]
}
